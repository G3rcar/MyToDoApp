<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MyFragmentActivity">

    <fragment
        android:layout_centerInParent="true"
        android:id="@+id/frgToDoList"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:name="com.creativa.mytodoapp.fragments.ToDoListFragment"/>

    <fragment
        android:id="@+id/frgToDoDetail"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:name="com.creativa.mytodoapp.fragments.DetailFragment" />

</RelativeLayout>